// Place your key bindings in this file to overwrite the defaults
[
    // File Management
    {
        "key": "space s",
        "command": "workbench.action.files.save",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space n",
        "command": "workbench.action.files.newUntitledFile",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space o",
        "command": "workbench.action.files.openFile",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    // Window Management
    {
        // Delete keybinding for consistency with default Code binding.
        "key": "space w",
        "command": "workbench.action.closeActiveEditor",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        // Delete keybinding for consistency with default Spacemacs binding.
        "key": "space d",
        "command": "workbench.action.closeActiveEditor",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space /",
        "command": "workbench.action.splitEditor",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space 1",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space 2",
        "command": "workbench.action.focusSecondEditorGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space 3",
        "command": "workbench.action.focusThirdEditorGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space h",
        "command": "workbench.action.moveActiveEditorGroupLeft",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space l",
        "command": "workbench.action.moveActiveEditorGroupRight",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space ]",
        "command": "workbench.action.openNextRecentlyUsedEditorInGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space [",
        "command": "workbench.action.openPreviousRecentlyUsedEditorInGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    // Basic editing
    {
        "key": "space c",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    // Rich Languages Editing
    {
        "key": "space =",
        "command": "editor.action.format",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space g",
        "command": "editor.action.goToDeclaration",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space r",
        "command": "editor.action.rename",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    // Task 
    {
        "key": "space b",
        "command": "editor.action.tasks.build",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space a",
        "command": "workbench.action.tasks.runTask",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space t",
        "command": "editor.action.tasks.test",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    // Display
    {
        "key": "space -",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space 0",
        "command": "workbench.view.explorer",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space p",
        "command": "markdown.showPreviewToSide",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    // Explorer navigation
    {
        "key": "k",
        "command": "list.focusUp",
        "when": "explorerViewletFocus"
    },
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "explorerViewletFocus"
    },
    {
        "key": "shift+h",
        "command": "list.focusFirst",
        "when": "explorerViewletFocus"
    },
    {
        "key": "shift+l",
        "command": "list.focusLast",
        "when": "explorerViewletFocus"
    },
    {
        "key": "[",
        "command": "list.focusPageUp",
        "when": "explorerViewletFocus"
    },
    {
        "key": "]",
        "command": "list.focusPageDown",
        "when": "explorerViewletFocus"
    },
    {
        "key": "h",
        "command": "list.collapse",
        "when": "explorerViewletFocus"
    },
    {
        "key": "l",
        "command": "list.expand",
        "when": "explorerViewletFocus"
    },
    {
        "key": "l",
        "command": "list.select",
        "when": "explorerViewletFocus"
    },
    {
        "key": "c",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus"
    },
    {
        "key": "shift+c",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "explorerViewletFocus"
    },
    {
        "key": "d",
        "command": "moveFileToTrash",
        "when": "explorerViewletFocus"
    },
    {
        "key": "y",
        "command": "filesExplorer.copy",
        "when": "explorerViewletFocus"
    },
    {
        "key": "p",
        "command": "filesExplorer.paste",
        "when": "explorerViewletFocus"
    },
    {
        "key": "space 1",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "!(terminalFocus) && !(editorTextFocus) && vim.mode != 'Insert'"
    },
    {
        "key": "space 2",
        "command": "workbench.action.focusSecondEditorGroup",
        "when": "!(terminalFocus) && !(editorTextFocus) && vim.mode != 'Insert'"
    },
    {
        "key": "space 3",
        "command": "workbench.action.focusThirdEditorGroup",
        "when": "!(terminalFocus) && !(editorTextFocus) && vim.mode != 'Insert'"
    }
]